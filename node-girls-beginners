// adding variables
var artist = "Craig David";
var first  = "node girls";
var second = 123;
var third  = false;
var happy  = false;
var x      = 11

// checking typeof functionality
console.log(typeof (first),typeof (second),typeof (third));

// displaying a variable
console.log(artist);

// using if/else statement for first time
if (happy === true) {
  // if I am happy show Craig David
  console.log(artist);
} else 
  // if I am sad show No Craig David
  {console.log("No Craig David");
  }

// using if/else to calculate if number is odd or even
if (x % 2 === 0) {
  // if x is devisible by 2 with no remainder, show even
  console.log("even");
} else 
  // x will be odd
  {console.log("odd");
  }
